<?xml version="1.0"?>
<simulation xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="../src/XMLInput/simulation.xsd">


  <parameter>
    <start-time>0</start-time>
    <end-time>10</end-time>
    <delta-t>0.00005</delta-t>
    
    <force-calculator>
      <type>lennard-jones</type>
      <epsilon>5</epsilon>
      <sigma>1</sigma>
    </force-calculator>
    
    <simulation-mode>
      <type>linked-cell</type>
      <cutoff_radius>3</cutoff_radius>
      <domain_size_x>120</domain_size_x>
      <domain_size_y>50</domain_size_y>
      <boundary x_0="reflect" x_max="reflect" y_0="reflect" y_max="reflect" z_0="reflect" z_max="reflect" />
    </simulation-mode>
  </parameter>
  
  
  <input>
    <sphere x1="60.0" x2="25.0" x3="0.0" r="15" h="1.1225" m="1.0" v1="0.0" v2="-10.0" v3="0.0" />
  </input>
  
  
  <output>
    <base_filename>Output/MD_vtk</base_filename>
    <output_freq>100</output_freq>
  </output>
  
  
</simulation>

