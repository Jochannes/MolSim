<?xml version="1.0"?>
<simulation xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="../src/XMLInput/simulation.xsd">


  <parameter>
    <start-time>0</start-time>
    <end-time>20</end-time>
    <delta-t>0.0005</delta-t>
    
    <force-calculator>
      <type>lennard-jones</type>
      <epsilon>5</epsilon>
      <sigma>1</sigma>
    </force-calculator>
    
    <simulation-mode>
      <type>linked-cell</type>
      <cutoff_radius>3</cutoff_radius>
      <domain_size_x>180</domain_size_x>
      <domain_size_y>90</domain_size_y>
    </simulation-mode>
  </parameter>
  
  
  <input>
    <particle_file>example_particle_file.txt</particle_file>
    <cuboid_file>example_cuboid_file.txt</cuboid_file>
    <sphere_file>example_sphere_file.txt</sphere_file>
  </input>
  
  
  <output>
    <base_filename>MD_vtk</base_filename>
    <output_freq>10</output_freq>
  </output>
  
  
</simulation>

