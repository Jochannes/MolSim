<?xml version="1.0"?>
<simulation xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="../src/XMLInput/simulation.xsd">


  <parameter>
    <start-time>0</start-time>
    <end-time>15</end-time>
    <delta-t>0.0005</delta-t>
    
    <simulation-mode>
      <type>linked-cell</type>
      <cutoff_radius>2.5</cutoff_radius>
      <domain_size_x>303</domain_size_x>
      <domain_size_y>180</domain_size_y>
      <boundary x_0="periodic" x_max="periodic" y_0="reflect" y_max="outflow" z_0="outflow" z_max="outflow" />
    </simulation-mode>
    
    <thermostat dim="2" steps="1000" init_temp="0.5" />
  </parameter>
  
  <force-calculator>
    <lennard-jones cutoff_factor="2.5" />
    <gravity g_grav="-12.44" />
  </force-calculator>
  
  <input>
    <cuboid x1="1.5" x2="2.0" x3="0.0" n1="250" n2="50" n3="1" h="1.2" m="1.0" epsilon="1.0" sigma="1.2" type="1" v1="0.0" v2="0.0" v3="0.0" />
  </input>
  
  
  <output>
    <iteration base_filename="Output/MD_vtk" output_freq="100" />
    <result filename="Output/result.txt" />
  </output>
  
  
</simulation>

