<?xml version="1.0"?>
<simulation xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="../src/XMLInput/simulation.xsd">


  <parameter>
    <start-time>0</start-time>
    <end-time>25</end-time>
    <delta-t>0.0005</delta-t>
    
    <simulation-mode>
      <type>linked-cell</type>
      <cutoff_radius>2.5</cutoff_radius>
      <domain_size_x>63</domain_size_x>
      <domain_size_y>36</domain_size_y>
      <boundary x_0="periodic" x_max="periodic" y_0="reflect" y_max="outflow" z_0="outflow" z_max="outflow" />
    </simulation-mode>
    
    <thermostat dim="2" steps="1000" init_temp="40" />
  </parameter>
  
  <force-calculator>
    <lennard-jones cutoff_factor="2.5" />
    <gravity g_grav="-12.44" />
  </force-calculator>
  
  <input>
    <cuboid x1="0.6" x2="2.0" x3="0.0" n1="50" n2="14" n3="1" h="1.2" m="1.0" epsilon="1.0" sigma="1.0" type="1" v1="0.0" v2="0.0" v3="0.0" />
    <cuboid x1="0.6" x2="19.0" x3="0.0" n1="50" n2="14" n3="1" h="1.2" m="2.0" epsilon="1.0" sigma="0.9412" type="2" v1="0.0" v2="0.0" v3="0.0" />
  </input>
  
  
  <output>
    <iteration base_filename="Output/sheet4_ex2_run1/MD_vtk" output_freq="100" />
  </output>
  
  
</simulation>

